    "sourceConfigInitialValues": {
        "search": "privileged:true"
    },
    "sourceConfig": [
        {
            "type": "menu",
            "label": "Connection Details",
            "items": [
                {
                    "type": "section",
                    "sectionTitle": "Identity Security Cloud connection configuration",
                    "sectionHelpMessage": "Configuration details for Identity Security Cloud Tenant",
                    "items": [
                        {
                            "key": "baseurl",
                            "label": "Identity Security Cloud API URL",
                            "type": "url",
                            "required": true
                        },
                        {
                            "key": "clientId",
                            "label": "Personal Access Token ID",
                            "type": "text",
                            "required": true
                        },
                        {
                            "key": "clientSecret",
                            "label": "Personal Access Token secret",
                            "type": "secret",
                            "required": true
                        }
                    ]
                }
            ]
        },
        {
            "type": "menu",
            "label": "Configuration",
            "items": [
                {
                    "type": "section",
                    "sectionTitle": "Proxy Entitlements Configuration",
                    "sectionHelpMessage": "Add your proxy entitlements definitions here",
                    "items": [
                        {
                            "key": "search",
                            "label": "Entitlement Search Query",
                            "type": "text",
                            "required": true
                        },
                        {
                            "key": "comment",
                            "label": "Request Comment",
                            "type": "text",
                            "required": true
                        },
                        {
                            "key": "makeRequestable",
                            "label": "Make Source Entitlements Requestable If Not Already",
                            "type": "checkbox",
                            "required": true
                        }
                    ]
                }
            ]
        }
    ],
    "accountSchema": {
        "displayAttribute": "id",
        "identityAttribute": "name",
        "attributes": [
            {
                "name": "id",
                "type": "string",
                "description": "ID"
            },
            {
                "name": "name",
                "type": "string",
                "description": "Name"
            },
            {
                "name": "entitlements",
                "type": "string",
                "description": "Proxy Entitlements",
                "multi": true,
                "entitlement": true,
                "managed": true,
                "schemaObjectType": "entitlement"
            }
        ]
    },
    "entitlementSchemas": [
        {
            "type": "entitlement",
            "identityAttribute": "id",
            "displayAttribute": "name",
            "attributes": [
                {
                    "name": "id",
                    "type": "string",
                    "description": "ID"
                },
                {
                    "name": "name",
                    "type": "string",
                    "description": "Name"
                },
                {
                    "name": "description",
                    "type": "string",
                    "description": "Description"
                }
            ]
        }
    ],
    "accountCreateTemplate": {
        "fields": [
            {
                "key": "name",
                "label": "Name",
                "type": "string",
                "required": true,
                "initialValue": {
                    "type": "identityAttribute",
                    "attributes": {
                        "name": "uid"
                    }
                }
            }
        ]
    }
